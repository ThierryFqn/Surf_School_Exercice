<div class="banner-show">
  <div class="container">
    <h1 class="banner-element-name"><%= @course.sport.upcase %></h1>
    <%= cl_image_tag @course.school.photo.key, class: "avatar-asso-show dropdown-toggle img-organizer-show" %>
  </div>
  <div class="nb-hours">
    <h2><i class="fa-solid fa-euro-sign"></i> <%= @course.daily_price %>/jour</h2>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-sm-12 p-5">
      <h6 class="element-show-organizer-intro"><%= @course.school.name %></h6>
      <div class="element-show-infos py-2">
        <%# <p class="event-show-infos-padding-right"><i class="fa-solid fa-calendar"></i> = @event.start_date.strftime("%d/%m/%y")
        <p class="event-show-infos-padding-right event-show-infos-padding-left"><i class="fa-solid fa-clock"></i> <%#= @event.start_date.strftime("%H:%M") %>
        <p class="element-show-infos-padding-left"><i class="fa-solid fa-location-dot"></i> <%= @course.school.address %></p>
      </div>
      <div class="element-show-description">
        <p class="element-show-description-title">Au programme de<span class="need-description"> cette journée</span> <span class="interogation-description">______</span> </p>
        <p class= "element-show-description-content"><%= @course.description.capitalize %></p>
      </div>

      <div id="eventCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <% @course.photos.each_with_index do |photo, i| %>
            <li data-target="#eventCarousel" data-slide-to="<%= i %>" class="<%= 'active' if i == 0 %>"></li>
          <% end %>
        </ol>
        <div class="carousel-inner">
          <% @course.photos.each_with_index do |photo, i| %>
            <div class="carousel-item <%= 'active' if i == 0 %>">
              <img class="d-block w-100" src="<%= cl_image_path photo.key %>" alt="First slide">
            </div>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#eventCarousel" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#eventCarousel" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
    <div class="col-lg-4 col-sm-12 p-4">
      <div class="element-show-inscription my-4">
        <h3 class="mb-3">Vous souhaitez réserver?</h3>
        <%= simple_form_for [@course, @booking] do |f| %>
          <div class="row">
            <div class="col-sm-12 col-md-6">
              <%= f.input :begin_date, label: "Du:", required: false, placeholder:"Start date", as: :date, html5: true %>
            </div>
            <div class="col-sm-12 col-md-6">
              <%= f.input :end_date, label: "Au:", required: false, placeholder:"End date", as: :date, html5: true  %>
            </div>
            <p class="my-0 price-align-left">__________</p>
            <h4 class="mt-2 mb-3 price-align-left">Total price <strong id="total-price-value"> <%#= @booking.total_price %></strong></h4>
          </div>
          <%= f.submit "Book", class: "w-100 btn btn-flat mb-2" %>
          <p class="mb-1 text-center"><small>You won't be charged yet</small></p>
        <% end %>
      </div>
    </div>
  </div>
</div>



